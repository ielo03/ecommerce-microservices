# Database Configuration
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=ecommerce
MYSQL_USER=ecommerce
MYSQL_PASSWORD=ecommerce

# Product Service
PRODUCT_SERVICE_PORT=8081
PRODUCT_SERVICE_HOST=0.0.0.0
PRODUCT_DB_HOST=mysql
PRODUCT_DB_PORT=3306
PRODUCT_DB_NAME=ecommerce_products
PRODUCT_DB_USERNAME=ecommerce
PRODUCT_DB_PASSWORD=ecommerce

# Order Service
ORDER_SERVICE_PORT=8082
ORDER_SERVICE_HOST=0.0.0.0
ORDER_DB_HOST=mysql
ORDER_DB_PORT=3306
ORDER_DB_NAME=ecommerce_orders
ORDER_DB_USERNAME=ecommerce
ORDER_DB_PASSWORD=ecommerce

# User Service
USER_SERVICE_PORT=8083
USER_SERVICE_HOST=0.0.0.0
USER_DB_HOST=mysql
USER_DB_PORT=3306
USER_DB_NAME=ecommerce_users
USER_DB_USERNAME=ecommerce
USER_DB_PASSWORD=ecommerce
JWT_SECRET=your-secret-key-should-be-long-and-secure
JWT_EXPIRES_IN=1d

# API Gateway
API_GATEWAY_PORT=8080
API_GATEWAY_HOST=0.0.0.0

# Service URLs (for inter-service communication)
PRODUCT_SERVICE_URL=http://product-service:8080
ORDER_SERVICE_URL=http://order-service:8080
USER_SERVICE_URL=http://user-service:8080

# Service API Keys (for service-to-service authentication)
PRODUCT_SERVICE_API_KEY=product-service-key
ORDER_SERVICE_API_KEY=order-service-key
USER_SERVICE_API_KEY=user-service-key

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
ENABLE_INVENTORY_CHECK=true
ENABLE_RECOMMENDATIONS=false
ENABLE_CACHING=true

# Rate Limiting
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGIN=*